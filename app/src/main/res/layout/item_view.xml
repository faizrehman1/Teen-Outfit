<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:scrollbars="none"
    >
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#9d000000"
        android:layout_marginTop="4dp"
        ></View>

    <ImageView
        android:src="@mipmap/hanger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />



        <android.support.v7.widget.CardView
            android:layout_width="240dp"
            android:layout_height="310dp"
            android:id="@+id/cv_item"
            card_view:cardUseCompatPadding="true"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="12sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp">

            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ProgressBar
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                <ImageView
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:id="@+id/itemImage"
                android:layout_width="295dp"
                android:layout_height="180dp"
               />
                </RelativeLayout>

                <TextView
                    android:textDirection="ltr"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/caption_item"
                    android:text="ديمقراطيةديمقراطيةديمقراطية ديمقراطية ديمقراطية ديمقراطية  اطية ديمقراطية ديمقراطية ديمقراطية   zc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginLeft="5dp"
                android:id="@+id/itemleave"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/leave_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30"
                        android:textColor="@color/colorPrimaryDark" />

                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  Leave it" />

                </LinearLayout>


                <LinearLayout
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/itemtake"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/take_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10  "
                        android:textColor="@color/colorPrimaryDark" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text=" Take it" />
                </LinearLayout>
            </LinearLayout>
            </LinearLayout>


        </android.support.v7.widget.CardView>



</RelativeLayout>
    </LinearLayout>

