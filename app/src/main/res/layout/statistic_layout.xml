<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:scrollbars="none"
    >
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/select_item"
        android:scaleType="fitXY"
        android:src="@mipmap/placeholder"
        android:layout_width="match_parent"
        android:layout_height="200dp" />


    <LinearLayout

        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:src="@mipmap/leaveit_icon"
            android:layout_marginLeft="5dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:padding="5dp"
            android:id="@+id/select_item_leave"
            android:textSize="10sp"
            android:text="10"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:padding="2dp"
            android:textSize="10sp"
            android:text="Leave It"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <ImageView
            android:src="@mipmap/takeit_icon"
            android:layout_marginLeft="5dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/select_item_take"
            android:padding="5dp"
            android:textSize="10sp"
            android:text="20"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView

            android:textSize="10sp"
            android:text="Take It"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <android.support.v7.widget.CardView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cv_discovery"
            card_view:cardCornerRadius="8dp"
            >

            <RelativeLayout
                android:id="@+id/discovery_pref"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                >

                <TextView
                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/discovery_name"
                    android:layout_alignParentTop="true"
                    android:textSize="10sp"
                    android:textColor="#5e000000"
                    />




            </RelativeLayout>

        </android.support.v7.widget.CardView>

</LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/cv_charts"
            card_view:cardCornerRadius="8dp"
            >

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_gravity="center"
                        android:src="@mipmap/leaveit_box"
                        android:layout_width="90dp"
                        android:layout_height="50dp" />

                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:id="@+id/pie_leave_it"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:orientation="vertical">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/leave_male_count"
                        android:padding="2dp"
                        android:layout_gravity="center"
                        android:text="0%"
                        android:textColor="#44d0dd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                        <ImageView
                            android:padding="2dp"
                            android:src="@mipmap/male_icon"
                            android:layout_gravity="center"
                            android:textColor="#44d0dd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:textColor="#c1bfbf"
                            android:padding="2dp"
                            android:layout_gravity="center"
                            android:text="Male"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/leave_female_count"
                            android:padding="2dp"
                            android:layout_gravity="center"
                            android:text="0%"
                            android:textColor="@color/colorPrimary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <ImageView
                            android:padding="2dp"
                            android:src="@mipmap/female_icon"
                            android:layout_gravity="center"
                            android:textColor="@color/colorPrimary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:textColor="#c1bfbf"
                            android:padding="2dp"
                            android:layout_gravity="center"
                            android:text="Female"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

</LinearLayout>
                </LinearLayout>

                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/take_male_count"
                            android:padding="2dp"
                            android:layout_gravity="center"
                            android:text="0%"
                            android:textColor="#44d0dd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <ImageView
                            android:padding="2dp"
                            android:src="@mipmap/male_icon"
                            android:layout_gravity="center"
                            android:textColor="#44d0dd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:textColor="#c1bfbf"
                            android:padding="2dp"
                            android:layout_gravity="center"
                            android:text="Male"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/take_female_count"
                            android:padding="2dp"
                            android:layout_gravity="center"
                            android:text="0%"
                            android:textColor="@color/colorPrimary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <ImageView
                            android:padding="2dp"
                            android:src="@mipmap/female_icon"
                            android:layout_gravity="center"
                            android:textColor="@color/colorPrimary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:textColor="#c1bfbf"
                            android:padding="2dp"
                            android:layout_gravity="center"
                            android:text="Female"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                        </LinearLayout>

                <LinearLayout
                    android:layout_gravity="center"
                    android:id="@+id/pie_take_it"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:orientation="vertical">



                </LinearLayout>


                    <ImageView
                        android:layout_gravity="center"
                        android:src="@mipmap/takeit_box"
                        android:layout_width="90dp"
                        android:layout_height="50dp" />

                </LinearLayout>




            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>
    </ScrollView>